---
const currentYear = new Date().getFullYear();

// Footer data
const footerData = {
    company: {
        name: "Turple<span class='text-blue-500'>Cubes</span>",
        description: "TurpleCubes is a revolutionary platform that offers a comprehensive workspace for project development and deployment, accessible directly through your browser."
    },
    links: [
        {
            title: "Tools",
            items: [
                { name: "Code Server", url: "#" },
                { name: "Guacamole", url: "#" },
                { name: "File browser", url: "#" }
            ]
        },
        {
            title: "OS",
            items: [
                { name: "Ubuntu", url: "#" },
                { name: "Kali Linux", url: "#" },
                { name: "Fedora", url: "#" },
                { name: "Red Hat", url: "#" },
                { name: "Alpine", url: "#" }
            ]
        },
        {
            title: "Company",
            items: [
                { name: "Contact", url: "#" },
                { name: "About us", url: "#" },
                { name: "Privacy Policy", url: "#" },
                { name: "Terms of Service", url: "#" }
            ]
        },
        {
            title: "Socials",
            items: [
                { name: "LinkedIn", url: "#" },
                { name: "Twitter", url: "#" },
                { name: "Facebook", url: "#" },
                { name: "Discord", url: "#" },
                { name: "Instagram", url: "#" }
            ]
        }
    ]
};
---

<footer class="pt-4">
    <hr class="pb-4 border-gray-600" />
    <div class="max-w-6xl mx-auto px-4 grid grid-cols-2 md:grid-cols-6 gap-8">
        <!-- Company Info -->
        <div class="col-span-2 md:col-span-2">
            <h2 class="text-white text-2xl font-bold" set:html={footerData.company.name}></h2>
            <p class="mt-2 text-sm text-gray-300">{footerData.company.description}</p>
            <p class="mt-4 text-sm text-white">&copy; TurpleCubes Inc. {currentYear}</p>
        </div>
        
        <!-- Dynamic Link Sections -->
        {footerData.links.map(section => (
            <div class="pl-4 md:pl-8">
                <h5 class="text-white text-xl font-semibold footer-heading">{section.title}</h5>
                <ul class="mt-2 flex flex-col">
                    {section.items.map(item => (
                        <li class="mb-2">
                            <a href={item.url} class="p-0 text-white hover:text-gray-300">
                                {item.name}
                            </a>
                        </li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</footer>
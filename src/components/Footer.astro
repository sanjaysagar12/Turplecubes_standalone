---
const currentYear = new Date().getFullYear();

// Footer data
const footerData = {
    company: {
        name: "Turple<span class='text-blue-500'>Cubes</span>",
        description: "TurpleCubes is a revolutionary platform that offers a comprehensive workspace for project development and deployment, accessible directly through your browser."
    },
    links: [
        {
            title: "Tools",
            items: [
                { name: "Code Server", url: "#" },
                { name: "Guacamole", url: "#" },
                { name: "File browser", url: "#" }
            ]
        },
        {
            title: "OS",
            items: [
                { name: "Ubuntu", url: "#" },
                { name: "Kali Linux", url: "#" },
                { name: "Fedora", url: "#" },
                { name: "Red Hat", url: "#" },
                { name: "Alpine", url: "#" }
            ]
        },
        {
            title: "Browse",
            items: [
                { name: "Chrome", url: "#" },
                { name: "Brave", url: "#" },
                { name: "Firefox", url: "#" }
            ]
        },
        {
            title: "Company",
            items: [
                { name: "Contact", url: "#" },
                { name: "About us", url: "#" },
                { name: "Privacy Policy", url: "#" },
                { name: "Terms of Service", url: "#" }
            ]
        },
        {
            title: "Socials",
            items: [
                { name: "LinkedIn", url: "#" },
                { name: "Twitter", url: "#" },
                { name: "Facebook", url: "#" },
                { name: "Discord", url: "#" },
                { name: "Instagram", url: "#" }
            ]
        }
    ]
};
---

<footer class="mt-2 border-t-1 border-gray-500 text-gray-300 py-8 px-6">
    <div class="max-w-6xl mx-auto grid sm:grid-cols-3 md:grid-cols-6 gap-6 sm:gap-3">
        <!-- Company Info -->
        <div>
            <h2 class="text-white text-2xl font-bold" set:html={footerData.company.name}></h2>
            <p class="mt-2 text-sm">{footerData.company.description}</p>
            <p class="mt-4 text-sm">&copy; TurpleCubes Inc. {currentYear}</p>
        </div>
        
        <!-- Dynamic Link Sections -->
        {footerData.links.map(section => (
            <div>
                <h3 class="text-white font-semibold">{section.title}</h3>
                <ul class="mt-2 space-y-1">
                    {section.items.map(item => (
                        <li><a href={item.url} class="hover:text-white">{item.name}</a></li>
                    ))}
                </ul>
            </div>
        ))}
    </div>
</footer>
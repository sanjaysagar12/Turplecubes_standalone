---
import "../styles/global.css";
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Join the Waitlist | TurpleCubes">
  <Navbar currentPath="/register" />
  
  <div class="min-h-screen bg-gray-900 pt-20">
    <div class="container mx-auto px-4 py-16 flex flex-col items-center">
      <!-- Main Content -->
      <div class="max-w-3xl w-full text-center mb-10">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
          Be the <span class="text-purple-500">First</span> to Know
        </h1>
        <p class="text-gray-300 text-lg md:text-xl mb-8">
          Join our exclusive waiting list to get early access to our products and special launch offers.
        </p>
      </div>
      
      <!-- Registration Card -->
      <div class="bg-gray-800 rounded-lg shadow-xl overflow-hidden">
        <div class="p-8">
          <div class="flex justify-center mb-6">
            <!-- Decorative Icon -->
            <div class="w-16 h-16 bg-purple-600 rounded-full flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
            </div>
          </div>
          
          <h2 class="text-2xl font-bold text-center text-white mb-4">
            Join the Waiting List
          </h2>
          
          <form id="waitlist-form" class="space-y-6">
            <div>
              <label for="email" class="block text-sm font-medium text-gray-300 mb-1">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                placeholder="your.email@example.com"
                class="w-full px-4 py-2 bg-gray-700 border border-gray-600 rounded-md text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-colors text-sm"
              />
            </div>
            
            <div class="flex items-center py-2">
              <input
                id="notifications"
                name="notifications"
                type="checkbox"
                class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-600 rounded"
              />
              <label for="notifications" class="ml-2 block text-sm text-gray-300">
                Send me product updates and announcements
              </label>
            </div>
            
            <button
              type="submit"
              class="w-full py-2 px-4 bg-purple-600 hover:bg-purple-700 rounded-md text-white font-medium transition-colors duration-200 transform hover:scale-105"
            >
              Join Waiting List
            </button>
          </form>
          
          <p class="mt-6 text-sm text-gray-400 text-center">
            We'll notify you when we're ready to launch. No spam, we promise.
          </p>
        </div>
      </div>
      
      <!-- Features Section -->
      <div class="w-full max-w-4xl mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-gray-800 p-6 rounded-lg">
          <div class="text-purple-400 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Early Access</h3>
          <p class="text-gray-300">Be among the first to experience our innovative products before they're available to the public.</p>
        </div>
        
        <div class="bg-gray-800 p-6 rounded-lg">
          <div class="text-purple-400 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Exclusive Offers</h3>
          <p class="text-gray-300">Receive special discounts and promotions available only to our waiting list members.</p>
        </div>
        
        <div class="bg-gray-800 p-6 rounded-lg">
          <div class="text-purple-400 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-2">Priority Updates</h3>
          <p class="text-gray-300">Stay informed with exclusive behind-the-scenes updates and product development news.</p>
        </div>
      </div>
    </div>
  </div>
  
  <Footer />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('waitlist-form');
    
    form?.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const email = document.getElementById('email');
      const notifications = document.getElementById('notifications');
      
      if (email instanceof HTMLInputElement) {
        // Here you would typically send the data to your server
        // For now, we'll just show a success message
        
        // Clear the form
        form.innerHTML = `
          <div class="text-center py-6">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-green-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-2xl font-bold text-white mb-2">Thank You!</h3>
            <p class="text-gray-300">You've successfully joined our waiting list.<br>We'll be in touch soon!</p>
          </div>
        `;
      }
    });
  });
</script>